<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                petryk_deletelogger_log_listing.petryk_deletelogger_log_listing_data_source
            </item>
            <item name="deps" xsi:type="string">
                petryk_deletelogger_log_listing.petryk_deletelogger_log_listing_data_source
            </item>
        </item>
        <item name="spinner" xsi:type="string">petryk_deletelogger_log_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Petryk\DeleteLogger\Block\Adminhtml\Edit\Button\BackButton</item>
        </item>
    </argument>
    <dataSource name="petryk_deletelogger_log_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">
                Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider
            </argument>
            <argument name="name" xsi:type="string">petryk_deletelogger_log_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">log_id</argument>
            <argument name="requestFieldName" xsi:type="string">log_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">log_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sticky" xsi:type="boolean">true</item>
            </item>
        </argument>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected log(s)?</message>
                        <title translate="true">Delete log(s)</title>
                    </confirm>
                    <url path="petryk_deletelogger/index/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="petryk_deletelogger_log_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>log_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="log_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sorting" xsi:type="string">asc</item>
                    <item name="label" xsi:type="string" translate="true">ID</item>
                </item>
            </argument>
        </column>
        <column name="entity_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Petryk\DeleteLogger\Model\Log\Source\EntityType</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Entity Type</item>
                </item>
            </argument>
        </column>
        <column name="user_id" class="Petryk\DeleteLogger\Ui\Component\Listing\Columns\User">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">User Name</item>
                </item>
            </argument>
        </column>
        <column name="deleted_at" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Deleted At</item>
                </item>
            </argument>
        </column>
        <actionsColumn name="actions" class="Petryk\DeleteLogger\Ui\Component\Listing\Columns\Actions">
            <settings>
                <indexField>log_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
